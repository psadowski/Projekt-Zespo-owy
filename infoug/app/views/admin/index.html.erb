<div class="container">
<div class="col-md-8 col-md-offset-2">
<div class="search-bar">
  <form  role="search" action="admin" method="get">
    <div class="input-group add-on">
      <input class="form-control" placeholder="Search" name="q" id="srch-term" type="text">
      <div class="input-group-btn">
        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
      </div>
    </div>
  </form>
 </div>
 </div>
 <% if !@all_users.nil? %>
    <table class="table table-striped admin_table">
        <thead>
            <tr>
                <th>Surname</th>
                <th>Name</th>
                <th>Email</th>
                <th>Profile</th>
                <th>Role</th>
                <th></th>
                
            </tr>
        </thead>
        <tbody>
          
            <% @all_users.each do |u| %>
                <tr>
                  <td><%= u.surname %></td>
                  <td><%= u.name %></td>
                  <td><%= u.email %></td>
                  <td><form method="get" action="/admin/panel/admin_edit_user" >
                      <input name="id" value="<%= u.id %>" style="display:none;"></input>
                      <button value="submit" type="submit" class="btn btn-sm btn-info">Edit</button>
                  </form></td>
                  
                  <td><form method="post" action="admin/save_user">
                      <input name="user_id" value="<%= u.id %>" type="hidden">
                          <select name="role">
                              <option value="admin">admin</option>
                              <option value="student">student</option>
                              <option value="employee">employee</option>
                              <option value="<%= u.role %>" selected style="display:none;"><%= u.role %></option>
                          </select>
                   </td>
                  <td><button value="submit" type="submit" class="btn btn-sm btn-info">Save</button></td>
                  </form>
                </tr>
            <% end %>
          <% end %>
        </tbody>
    </table>
</div>