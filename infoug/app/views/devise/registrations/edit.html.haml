.registration-bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .log-in.panel
          .panel-heading
            %h2 Edit Profile
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            = f.error_notification
            .panel-body
              .form-inputs
              = f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email', input_html: { class: 'input-lg' }
              = f.input :name, required: true, autofocus: true, label: false, placeholder: 'User Name',input_html: { class: 'input-lg' }
              = f.input :surname, required: true, autofocus: true, label: false, placeholder: 'User Surname',input_html: { class: 'input-lg' }
              = f.input :password, autocomplete: "off",  required: true, autofocus: true, label: false, placeholder: "New Password"  ,input_html: { class: 'input-lg' }
              = f.input :password_confirmation, required: true, autofocus: true, label: false, placeholder: "Confirm Password"  ,input_html: { class: 'input-lg' }
              = f.input :current_password, required: true, autofocus: true, label: false, placeholder: "Current Password"  ,input_html: { class: 'input-lg' }
            .form-actions
              = f.button :submit, "Update", class: 'btn-lg btn-info btn-block'
        